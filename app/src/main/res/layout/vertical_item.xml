<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="6dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp"
    app:strokeColor="#86000000"
    app:strokeWidth="2dp"
    android:layout_height="660dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="#D81B60"
        android:layout_margin="12dp"
        app:strokeWidth="2dp"
        app:cardCornerRadius="152dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:civ_border_width="3.8dp"
            app:civ_border_color="@color/white"
            />




    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/name"
        android:layout_width="90dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="13dp"
        android:layout_height="16dp"
        android:letterSpacing="0.05"
        android:text="Croatilli"
        android:textStyle="bold"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/location"
        android:layout_width="150dp"
        android:layout_height="16dp"
        android:textColor="@color/black"
        android:text="Nukus, Qaraqalpaqstan"
        android:layout_marginStart="70dp"
        android:layout_marginTop="32dp"/>

    <ImageView
        android:id="@+id/dots"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:src="@drawable/dots"
        android:layout_marginTop="25dp"
        android:layout_marginStart="320dp"/>
<ImageView
    android:id="@+id/publikate"
    android:layout_width="match_parent"
    android:layout_height="380dp"
    android:layout_marginTop="70dp"
    />


    <ImageView
        android:id="@+id/heart"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/heart"
        android:layout_marginTop="470dp"
        android:layout_marginStart="18dp"/>
    <ImageView
        android:id="@+id/comment"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/comment"
        android:layout_marginTop="470dp"
        android:layout_marginStart="60dp"/>
    <ImageView
        android:id="@+id/send"
    android:layout_width="25dp"
    android:layout_height="25dp"
    android:src="@drawable/send"
    android:layout_marginTop="470dp"
    android:layout_marginStart="100dp"/>
    <ImageView
        android:id="@+id/save"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/save"
        android:layout_marginTop="470dp"
        android:layout_marginStart="350dp"/>
    <TextView
        android:id="@+id/theme"
        android:layout_marginStart="18dp"
        android:layout_width="180dp"

        android:layout_height="40dp"
        android:textColor="@color/black"
        android:layout_marginTop="505dp"
        android:text="100 отметок Нравится Croatilli  С наступающим " />

    <TextView
        android:id="@+id/comments"
        android:layout_width="250dp"
        android:layout_marginStart="18dp"
        android:layout_height="40dp"
        android:layout_marginTop="550dp"
        android:textColor="#5E000000"

        android:text="Посмотреть все комментарий ...        3 часа назад"/>

<com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_height="60dp"
    app:strokeColor="#57000000"
    app:strokeWidth="1dp"
    android:layout_marginTop="600dp">
    <ImageView
        android:id="@+id/smile"
        android:layout_width="28dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="12dp"
        android:layout_height="28dp"
        android:src="@drawable/smile"/>

    <TextView
        android:id="@+id/komment"
        android:layout_width="220dp"
        android:layout_marginStart="53dp"
        android:textSize="13dp"
        android:textStyle="bold"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:textColor="#5E000000"
        android:text="Добавьте комментарий"

       />

    <TextView
        android:id="@+id/opublicate"
        android:layout_width="100dp"
        android:layout_marginTop="16dp"
        android:textSize="14dp"
        android:textColor="#74039BE5"
        android:textStyle="bold"
        android:layout_marginStart="275dp"
        android:layout_height="20dp"
        android:text="Опубликовать"/>




</com.google.android.material.card.MaterialCardView>





</com.google.android.material.card.MaterialCardView>